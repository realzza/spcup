{
    "name": "vox1", 
    "seed": 123,
    "GPUtil": {
        "type": "getAvailable",
        "args": {
            "limit": 2,
            "maxMemory": 0.1,
            "maxLoad": 0.1
        }
    },
    "trainer": {
        "epochs": 80, 
        "early_stop": 10,
        "log_step": 3,
        "save_dir": "exp/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max valid_uar",
        "tensorboard": false
    }, 
    "dataset": {
        "type": "LogfbankDataset",
        "args": {
            "wav_scp": "index/train_utt2wav",
            "utt2label": "index/train_utt2label",
            "spk2int": "index/label2int",
            "logfbank_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true
        },
        "valid_split": 0
    },
    "valid_dataset": {
        "type": "LogfbankDataset",
        "args": {
            "wav_scp": "index/devel_utt2wav",
            "utt2label": "index/devel_utt2label",
            "spk2int": "index/label2int",
            "logfbank_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true
        },
        "valid_split": 0
    },
    "dataloader": {
        "type": "TruncateDataLoader",
        "args": {
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 12,
            "drop_last": true,
            "trun_range": [
                16000,
                80000
            ],
            "step": 160
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.01
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "patience": 9,
            "verbose": true
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {}
    },
    "metrics": [
        "accuracy",
        "uar"
    ], 
    "model": {
        "type": "Gvector",
        "args": {
            "channels": 1,
            "block": "BasicBlock", 
            "num_blocks": [
                3,
                4,
                6,
                3
            ],
            "embd_dim": 128,
            "drop": 0.5, 
            "n_class": 3
        }
    }
}
