{
    "n_gpu": 1,
    "dataset": {
        "type": "LogfbankDataset",
        "args": {
            "wav_scp": "index/train_utt2wav_vad2",
            "utt2label": "index/train_utt2label",
            "spk2int": "index/label2int.json",
            "logfbank_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true,
            "tdur": 5
        },
        "valid_split": 0
    },
    "dataloader": {
        "type": "SimpleDataLoader",
        "args": {
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 4,
            "drop_last": false
        }
    },
    "model": {
        "type": "Gvector",
        "args": {
            "channels": 16,
            "block": "BasicBlock", 
            "num_blocks": [
                2,2,2,2
            ],
            "embd_dim": 512,
            "drop": 0.5, 
            "n_class": 3
        }
    }
}
