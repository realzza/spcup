{
    "name": "vox1", 
    "seed": 123,
    "GPUtil": {
        "type": "getAvailable",
        "args": {
            "limit": 1,
            "maxMemory": 0.9,
            "maxLoad": 0.9
        }
    },
    "trainer": {
        "epochs": 300, 
        "early_stop": 500,
        "log_step": 3,
        "save_dir": "exp/",
        "save_period": 5,
        "verbosity": 2,
        "monitor": "max valid_uar",
        "tensorboard": false
    }, 
    "dataset": {
        "type": "FbankDataset",
        "args": {
            "wav_scp": "index/train_utt2wav_vad2",
            "utt2label": "index/train_utt2label",
            "spk2int": "index/label2int.json",
            "fbank_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true,
            "tdur": 5
        },
        "valid_split": 0
    },
    "valid_dataset": {
        "type": "FbankDataset",
        "args": {
            "wav_scp": "index/devel_utt2wav_vad2",
            "utt2label": "index/devel_utt2label",
            "spk2int": "index/label2int.json",
            "fbank_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true,
            "tdur": 5
        },
        "valid_split": 0
    },
    "dataloader": {
        "type": "SimpleDataLoader",
        "args": {
            "batch_size": 32,
            "shuffle": true,
            "num_workers": 8,
            "drop_last": false
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.01
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "patience": 50,
            "verbose": true
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {}
    },
    "metrics": [
        "uar"
    ], 
    "model": {
        "type": "Gvector",
        "args": {
            "channels": 16,
            "block": "BasicBlock", 
            "num_blocks": [
                2,2,2,2
            ],
            "embd_dim": 128,
            "drop": 0.5, 
            "n_class": 3
        }
    }
}
