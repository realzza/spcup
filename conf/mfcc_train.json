{
    "name": "vox1", 
    "seed": 42,
    "GPUtil": {
        "type": "getAvailable",
        "args": {
            "limit": 2,
            "maxMemory": 0.1,
            "maxLoad": 0.1
        }
    },
    "trainer": {
        "epochs": 100, 
        "early_stop": 30,
        "log_step": 44,
        "save_dir": "exp/",
        "save_period": 1,
        "verbosity": 1,
        "monitor": "max valid_uar",
        "tensorboard": false
    }, 
    "dataset": {
        "type": "MfccDataset",
        "args": {
            "wav_scp": "index/train_utt2wav",
            "utt2label": "index/train_utt2lab",
            "spk2int": "index/label2int.json",
            "mfcc_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true,
            "tdur": 3
        },
        "valid_split": 0
    },
    "valid_dataset": {
        "type": "MfccDataset",
        "args": {
            "wav_scp": "index/devel_utt2wav",
            "utt2label": "index/devel_utt2lab",
            "spk2int": "index/label2int.json",
            "mfcc_kwargs":{
                "winlen": 0.025,
                "winstep": 0.01,
                "nfilt": 256,
                "nfft": 1024,
                "lowfreq": 0,
                "highfreq": null,
                "preemph": 0.97
            },
            "padding": "wrap",
            "cmn": true,
            "tdur": 3
        },
        "valid_split": 0
    },
    "dataloader": {
        "type": "SimpleDataLoader",
        "args": {
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 27,
            "drop_last": false
        }
    },
    "optimizer": {
        "type": "SGD",
        "args": {
            "lr": 1e-2,
            "weight_decay": 1e-4,
            "momentum":0.8
        }
    },
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "min",
            "patience": 9,
            "verbose": true
        }
    },
    "loss": {
        "type": "CrossEntropyLoss",
        "args": {
            "weight": [0.1,0.10,0.1,0.1,0.1,0.1,0.4]
        }
    },
    "metrics": [
        "accuracy",
        "uar"
    ], 
    "model": {
        "type": "Gvector",
        "args": {
            "channels": 16,
            "block": "BasicBlock", 
            "num_blocks": [
                1,1,1,1
            ],
            "embd_dim": 512,
            "drop": 0.5, 
            "n_class": 7
        }
    }
}
